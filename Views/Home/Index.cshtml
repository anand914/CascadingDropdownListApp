@{
    ViewData["Title"] = "Index";
}
<style>
    .modal-header {
        display: block !important
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-10offset-2">
            <div>
                <a class="btn btn-sm btn-primary mb-2" id="btnAdd" style="float: right;width: 88px;}">Add User</a>
            </div>
            @*    design modelPopup *@
            <div class="modal fade" id="Cascade_Model">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="row">
                                <div class="col-md-6">
                                    <h3 id="header-text" class="text-primary">Add User</h3>
                                </div>
                                <div class="col-md-6">
                                    <button class="btn btn-sm btn-outline-danger float-end btnClose">&times;</button>
                                </div>
                            </div>
                        </div>
                        <div class="modal-body">
                            <form method="post" id="cascade_form">
                                <div class="form-group">
                                    <label>Name:</label>
                                    <input type="text" class="form-control" placeholder="Enter a name" id="Name" />
                                    <input type="hidden" id="userId" />
                                </div>
                                <div class="form-group">
                                    <label>Email:</label>
                                    <input type="text" class="form-control" placeholder="Enter a Email" id="email" autocomplete="off" />
                                </div>
                                <div class="form-group">
                                    <label>Country:</label>
                                    <select id="country" class="form-control">
                                        <option value="">--Select Country---</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>State:</label>
                                    <select id="state" class="form-control">
                                        <option value="">--Select State---</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>City:</label>
                                    <select id="city" class="form-control">
                                        <option value="">--Select city---</option>
                                    </select>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <input type="button" value="Save" onclick="SaveUserData();" class="btn btn-sm" id="btnsave" />
                            <input type="button" value="Close" class="btn btn-sm btn-outline-danger btnClose float-end" id="btnclose" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <div class="alert alert-success alert-dismissible fade show" role="alert" id="alertSuccess" style="display: none;">
                    <strong>Success!</strong> <span id="alertMessage"></span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <div class="alert alert-danger alert-dismissible fade show" role="alert" id="alertError" style="display: none;">
                    <strong>Error!</strong> <span id="alertErrorMessage"></span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
            @*  <div class="text-center">
            <h4 class="text-success" id="tblNotify"></h4>
            </div> *@

            <table class="table table-bordered table-striped table-hover">
                <thead class="bg-dark text-light text-center">
                    <tr>
                        @* <th>UserId</th> *@
                        <th>Name</th>
                        <th>Email</th>
                        <th>Country</th>
                        <th>State</th>
                        <th>City</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="tblcascade" class="text-center"></tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/cascade.js"></script>
}